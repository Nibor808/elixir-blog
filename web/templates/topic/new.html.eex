<!-- elixir code that generates a form, form_for takes 2 params @changeset and topic_path(route) -->
<%= form_for @changeset, topic_path(@conn, :create), fn f -> %>
  <div class="form-group">
    <%= text_input f, :title, placeholder: "Title", class: "form-control" %> <!-- f is the form object from form_for -->
    <%= error_tag f, :title %>
  </div>

  <%= submit "Save Topic", class: "btn btn-primary" %>
<% end %> <!-- end of anonymous function -->